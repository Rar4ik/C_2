<Window x:Class="SecondWPF.Editing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondWPF"
        mc:Ignorable="d"
        Title="Editing" Height="300" Width="300">
    <Grid>
        <StackPanel x:Name="mainStackPanel" >

            <TextBox Text="{Binding Surname, UpdateSourceTrigger = Default}" Margin="5"/>
            <TextBox Text="{Binding Age, UpdateSourceTrigger = Default}" Margin="5"/>
            <TextBox Text="{Binding Salary, UpdateSourceTrigger = LostFocus}" Margin="5"/>
            <ComboBox Name="DepsList" Text="{Binding dep, UpdateSourceTrigger = LostFocus}" Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
